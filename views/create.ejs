<% layout("/layout/boilerplate") %>
<body>
  <div class="w-full px-24 min-h-[81vh] text-secondary">
    <h1 class="text-3xl font-bold">Create Note</h1>

    <div class="mt-12 flex items-center justify-center flex-col">
      <form
        action="/create"
        method="post"
        class="border-2 border-secondary px-6 py-6 rounded-lg shadow-lg w-72"
      >
        <div class="relative z-0 mb-5">
          <input
            type="date"
            name="note[date]"
            placeholder=" "
            onclick="this.setAttribute('type', 'date');"
            class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-primary border-secondary"
            id="date"
          />
          <label
            for="note[date]"
            class="absolute duration-300 top-3 -z-1 origin-0 text-gray-500"
            >Date</label
          >
          <span class="text-sm text-red-600 hidden" id="error"
            >Date is required</span
          >
        </div>
        <div class="relative z-0 w-full mb-5">
          <input
            type="text"
            name="note[title]"
            placeholder=" "
            required
            class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-primary border-secondary"
          />
          <label
            for="note[title]"
            class="absolute duration-300 top-3 -z-1 origin-0 text-gray-500 focus:text-primary"
            >Enter Title</label
          >
          <span class="text-sm text-red-600 hidden" id="error"
            >Title is required</span
          >
        </div>

        <div class="relative z-0 w-full mb-5">
          <textarea
            name="note[description]"
            id="description"
            required
            class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-primary border-secondary"
          ></textarea>
          <label
            for="note[description]"
            class="absolute duration-300 top-3 z-10 origin-0 text-gray-500"
            id="descriptionLabel"
            >Enter description</label
          >
          <span class="text-sm text-red-600 hidden" id="error"
            >Description is required</span
          >
        </div>

        <div class="w-full flex items-center justify-center mt-8">
          <button
            type="submit"
            class="bg-primary text-secondary px-4 py-2 rounded-lg"
          >
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const today = new Date().toISOString().split("T")[0];

    document.getElementById("date").value = today;
  </script>
</body>
